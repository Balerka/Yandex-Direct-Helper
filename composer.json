{
    "name": "balerka/laravel-yandex-direct-strategy-auto-updater",
    "description": "Laravel Yandex Direct Strategy Auto Updater is a package for automatically updating advertising campaign strategies in Yandex.Direct based on your income.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Balerka\\LaravelYandexDirectStrategyAutoUpdater\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Balerka",
            "email": "balerka92@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^10.0",
        "biplane/yandex-direct": "^5.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}
