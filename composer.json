{
    "name": "balerka/yandex-direct-helper",
    "description": "Yandex Direct Helper is a package for automatically updating advertising campaign strategies and expenses in Yandex.Direct.",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Balerka\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Balerka",
            "email": "balerka92@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "biplane/yandex-direct": "^5.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    }
}
